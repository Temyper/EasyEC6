<% good.good_comments.each do |good_comment| %>
  <% good_comment_user = good_comment.user %>
  <tr>
  	<td>
  		<%= link_to user_path(good_comment_user), class: "user_#{good_comment_user.id}" do %>
    		<%= attachment_image_tag good_comment_user, :profile_image, :fill, 50, 50, fallback: "users/NoPictureForUsers.png", size: "50x50" %><br>
    		<%= good_comment_user.name %>
  		<% end %>
  	</td>
  	<td><%= good_comment.content %></td>
  	<% if current_user == good_comment_user %>
    	<td><%= link_to "削除", good_good_comment_path(good_comment.good_id, good_comment.id), class: 'btn-sm btn-danger', method: :delete, remote: true %></td>
  	<% end %>
  </tr>
<% end %>
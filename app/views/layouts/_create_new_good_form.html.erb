<h2 class="mt-3">新規投稿</h2>
<%= form_with model: good, local:true do |f| %>
  <div class="form-group">
    <p>名前</p>
  </div>
  <div class="form-group">
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <p>紹介</p>
  </div>
  <div class="form-group">
    <%= f.text_area :introduction%>
  </div>
  <hr>
  <%= f.submit '物品を投稿する', class:"btn btn-lg btn-block btn-info mt-4 btn-success" %>
<% end %>
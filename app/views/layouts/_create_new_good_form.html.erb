<h2 class="mt-3">新規投稿</h2>
<%= form_with model: good, local:true do |f| %>
  <p>画像</p>
  <%= f.attachment_field :image %>
  <div class="form-group">
    <p>名前</p>
  </div>
  <div class="form-group">
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <p>紹介</p>
  </div>
  <div class="form-group">
    <%= f.text_area :introduction%>
  </div>
    <div class="form-group">
      <p>値段</p>
    <%= f.number_field :value, min: 0, max: 10000000 %>
  </div>
  <hr>
  <%= f.submit '物品を投稿する', class:"btn btn-lg btn-block btn-info mt-4 btn-success" %>
<% end %>